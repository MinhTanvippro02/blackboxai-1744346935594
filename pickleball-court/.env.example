# Server Configuration
PORT=8000
ENV=development
TZ=UTC

# Session Configuration
SESSION_SECRET=your-secret-key-change-this
SESSION_MAX_AGE=86400

# Database Configuration
DB_PATH=./pickleball.db

# Booking Configuration
BOOKING_MAX_DAYS_AHEAD=14
BOOKING_MIN_HOURS_ADVANCE=1
BOOKING_MAX_HOURS_PER_WEEK=10
OPENING_HOUR=6
CLOSING_HOUR=22

# Email Configuration
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@picklecourt.com

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8000

# Application Settings
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@picklecourt.com
DEFAULT_ADMIN_PASSWORD=change-this-password

# Development Tools
DEBUG=false
GIN_MODE=release

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60

# Cache Configuration
CACHE_ENABLED=true
CACHE_DURATION=300

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Feature Flags
FEATURE_SOCIAL_LOGIN=false
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_WAITLIST=false

# Payment Integration (for future use)
STRIPE_ENABLED=false
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Google OAuth (for future use)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/auth/google/callback

# Facebook OAuth (for future use)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:8000/auth/facebook/callback

# AWS S3 Configuration (for future use)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_BUCKET_NAME=your-bucket-name

# Redis Configuration (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Monitoring Configuration (for future use)
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_HOST=localhost:8000
SWAGGER_BASEPATH=/api/v1

# Testing Configuration
TEST_DB_PATH=:memory:
TEST_EMAIL_ENABLED=false
